{{#if categories}}
  <div class="dc-categories-container">
    <h2 class="dc-heading">
      {{theme-i18n "dc.categories.collectives.title"}}
    </h2>
    <p>
      {{{theme-i18n "dc.categories.collectives.description"}}}
    </p>
    <div class="dc-row">
      {{#each categories as |c|}}
        {{#if c.is_collective}}
          <div class="dc-col-sm-6">
            {{dc-category-card category=c}}
          </div>
        {{/if}}
      {{/each}}
    </div>
  </div>
{{/if}}
{{#if categories}}
